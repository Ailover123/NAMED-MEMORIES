<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendarRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CalendarActivity"
    android:background="@drawable/splash_background"
    tools:ignore="VisualLintBounds">

    <!-- Calendar View -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:dateTextAppearance="@style/CalendarDateTextStyle"
        android:weekDayTextAppearance="@style/CalendarWeekDayTextStyle"
        android:theme="@style/CalendarTheme" />

    <!-- Events List View -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/calendarView"
        android:layout_above="@id/bottomSpace"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        tools:listitem="@layout/item_calendar_event" />

    <!-- Bottom space to prevent FAB overlap -->
    <View
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/add_event"
        app:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="8dp"
        app:pressedTranslationZ="12dp" />

</RelativeLayout>